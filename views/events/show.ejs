<%- include("../partials/header") %>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">PlanMyEvent</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div class="img-thumbnail">
                <img class="img-responsive" src="<%= event.image %>">
				<hr>
				<div class="well">
                <div class="figure-caption">
                    <h4 class="float-right"><%= event.price %>/ticket</h4>
                    <h4><a><%=event.name%></a></h4>
                    <p><%= event.description %></p>
					<p>
						<%= event.date %>
						<%= event.duration %>
					</p>
                </div>
					<div class="show">
					 <p>
                        <em>Posted By <%= event.author.username %></em>
						
                    </p>
                        <% if(currentUser && event.author.id.equals(currentUser._id)){ %>
                        <a class="btn btn-xs btn-warning" href="/events/<%= event._id %>/edit">Edit</a>
                        <form id="delete-form" action="/events/<%= event._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-xs btn-danger">Delete</button>
                        </form>
                   <% } %>
					</div>
				</div>
            </div>
        </div>
    </div>
</div>

<%- include("../partials/footer") %>