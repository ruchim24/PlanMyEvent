<%- include("../partials/header") %>
<div class="container">
    <div class="row">
		<div class="container mt-5" >
		<h1 style="text-align: center">Edit <%= event.name %></h1>
	   </div>
        
        <div style="width: 30%; margin: 25px auto;">
            <form action="/events/<%= event._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="event[name]" value="<%= event.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="event[image]" value="<%= event.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="event[description]" value="<%= event.description %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="date" name="date" value="<%= event.date %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="duration" value="<%= event.duration %>">
                </div>
				<div class="form-group">
                    <input class="form-control" type="number" name="price" value="<%= event.price %>">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/events">Go Back</a>
        </div>
    </div>
</div>
<%- include("../partials/footer") %>